#ifndef __CONFIG_H
  #define __CONFIG_H

 /************************ Development settings ********************************/
  //#define DEBUG
  #define VERSION         "0.1"
  #define SERIAL_BAUD     115200

  /************************* WiFi Access Point *********************************/
  #define WIFI_SSID       ""
  #define WIFI_PASSWORD   ""
  #define CONNECT_TIMEOUT 5

  /***************************** MQTT Setup ***********************************/
  #define MQTT_SERVER     ""
  #define MQTT_SERVERPORT 1883
  #define MQTT_USERNAME   ""
  #define MQTT_PASSWORD   ""

  /*************************** Features Setup *********************************/
  // Ringing detection pin
  #define RINGING_PIN D3
  // Ringing detection timeout in milliseconds
  #define RINGING_TIMEOUT 1000

  // Indication LED pin
  #define RINGING_INDICATOR_PIN D1
  // Indication LED duration
  #define RINGING_INDICATOR_TIMEOUT 30000

  // Door opening pin
  #define OPEN_PIN D2
  // Door opening button push duration in milliseconds
  #define OPEN_DURATION 10000

  /************************** Battery Monitoring ********************************/
  // Enable battery voltage monitoring (comment out to disable)
  #define ENABLE_BATTERY_MONITORING

  // Battery voltage reporting interval in milliseconds (default: 5 minutes)
  #define BATTERY_REPORT_INTERVAL 300000

  // Low battery warning threshold in volts (18650 safe minimum ~3.2V)
  #define LOW_BATTERY_THRESHOLD 3.3

  // Critical battery threshold in volts (emergency shutdown recommended)
  #define CRITICAL_BATTERY_THRESHOLD 3.1

  // Voltage divider resistor values (R1 = high side, R2 = low side to GND)
  // For 18650 (4.2V max) to ESP8266 ADC (1.0V max): use R1=100k, R2=33k
  // Adjust these values based on your actual resistors
  #define VOLTAGE_DIVIDER_R1 100000.0  // 100kΩ
  #define VOLTAGE_DIVIDER_R2 33000.0   // 33kΩ

  /************************ Power Management ************************************/
  // Enable WiFi light sleep mode to reduce power consumption
  // Light sleep allows WiFi to sleep between DTIM beacons while maintaining connection
  // Reduces power by ~50-70mA but may slightly increase latency
  // If you experience WiFi stability issues, comment this out to disable
  #define ENABLE_WIFI_LIGHT_SLEEP

#endif
